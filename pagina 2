<script>
$(document).ready(function(){
  $("#hide_sedans").click(function(){
    $(".sedans").hide();
  });
  $("#show_sedans").click(function(){
    $(".sedans").show();
  });
  $("#hide_hatchbacks").click(function(){
    $(".hatchbacks").hide();
  });
  $("#show_hatchbacks").click(function(){
    $(".hatchbacks").show();
  });
  $("#hide_stations").click(function(){
    $(".stations").hide();
  });
  $("#show_stations").click(function(){
    $(".stations").show();
  });
  $("#hide_cabriolets").click(function(){
    $(".cabriolets").hide();
  });
  $("#show_cabriolets").click(function(){
    $(".cabriolets").show();
  });
  $("#hide_coupés").click(function(){
    $(".coupés").hide();
  });
  $("#show_coupés").click(function(){
    $(".coupés").show();
  });
  $("#hide_MVPs").click(function(){
    $(".MVPs").hide();
  });
  $("#show_MVPs").click(function(){
    $(".MVPs").show();
  });
  $("#hide_Terreinautos").click(function(){
    $(".Terreinautos").hide();
  });
  $("#show_Terreinautos").click(function(){
    $(".Terreinautos").show();
  });
});
</script>

